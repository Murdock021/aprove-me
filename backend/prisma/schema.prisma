generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Assignor {
  id       Int       @id @default(autoincrement())
  document String
  email    String
  phone    String
  name     String
  payables Payable[]

  @@map("assignors")
}

model Payable {
  id           String   @id @default(uuid())
  value        Float
  emissionDate DateTime
  assignorId   Int
  assignor     Assignor @relation(fields: [assignorId], references: [id])

  @@map("payables")
}

model Session {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  token  String

  @@map("session")
}

model User {
  id       Int       @id @default(autoincrement())
  login    String    @unique
  password String
  session  Session[]

  @@map("users")
}

